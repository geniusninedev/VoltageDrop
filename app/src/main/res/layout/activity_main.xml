<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:orientation="vertical"
    tools:context="nineinfosys.voltagedrop.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Current(Amp):"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCurrent"
            android:textSize="18dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="  "
            android:ems="10"
            android:id="@+id/editTextCurrent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Resistance(Ohm):"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewResistance"
            android:textSize="18dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="  "
            android:ems="10"
            android:id="@+id/editTextResistance" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Distance(m):"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDistance"
            android:textSize="18dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="  "
            android:ems="10"
            android:id="@+id/editTextDistance" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="50dp">


        <Button
            android:text="Calculate"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCalculate"
            android:layout_weight="0.21" />

        <Button
            android:text="Clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonClear"
            android:layout_marginLeft="100dp"
            android:layout_weight="0.25" />
    </LinearLayout>
    <TextView
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20dp"
        android:layout_width="360dp"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewResult" />


</LinearLayout>
